<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:padding="@dimen/_5sdp"
    android:orientation="vertical"
    tools:context="ravi.com.instashop.activity.MyAccount">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DELIVERY DETAILS"/>
    <android.support.v7.widget.CardView
    app:cardElevation="8dp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    app:cardCornerRadius="3dp">

    <EditText
        android:layout_margin="@dimen/_3sdp"
        android:hint="Address"
        android:drawableLeft="@drawable/ic_local_shipping_black_24dp"
        android:drawablePadding="@dimen/_5sdp"
        android:text="Burj Khalifa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null" />
</android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMAIL ADDRESS"/>
    <android.support.v7.widget.CardView
        app:cardElevation="8dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardCornerRadius="3dp">

        <EditText
            android:layout_margin="@dimen/_3sdp"
            android:hint="Unavailable"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null" />
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PHONE NUMBER"/>
    <android.support.v7.widget.CardView
        app:cardElevation="8dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardCornerRadius="3dp">

        <EditText
            android:layout_margin="@dimen/_3sdp"
            android:hint="Unavailable"
            android:drawableLeft="@drawable/ic_call_black_24dp"
            android:drawablePadding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null" />
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAYMENT"/>
    <android.support.v7.widget.CardView
        app:cardElevation="8dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardCornerRadius="3dp">

        <EditText
            android:layout_margin="@dimen/_3sdp"
            android:hint="Unavailable"
            android:drawableLeft="@drawable/ic_payment_black_24dp"
            android:drawablePadding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null" />
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LANGUAGE"/>
    <android.support.v7.widget.CardView
        app:cardElevation="8dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardCornerRadius="3dp">

        <EditText
            android:layout_margin="@dimen/_3sdp"
            android:hint="Address"
            android:drawableLeft="@drawable/ic_public_black_24dp"
            android:drawablePadding="@dimen/_5sdp"
            android:text="English"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null" />
    </android.support.v7.widget.CardView>

    <Button
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/btn_next"
        android:backgroundTint="@color/colorPrimaryDark"
        android:background="@drawable/btn_bg_curved"
        android:text="logout"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp" />

</LinearLayout>
